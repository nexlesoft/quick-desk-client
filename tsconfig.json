{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "sourceMap": true,
    "declarationMap": true
  },
  "include": ["src", "index.ts"],
  "exclude": ["node_modules"]
}
